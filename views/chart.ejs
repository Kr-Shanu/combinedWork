<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">



    <title>Document</title>
</head>


<body>


<% var expense=0; %>
<% var investment=0; %>
    <% var savings=0; %>
        <% posts.forEach(function(post){ %>
            <% expense=expense + post.normal %>
                <% investment=investment + post.investment %>
                    <% savings=savings + post.savings %>
                        <% }); %>


    <div style="align-items: center;">

        <canvas style="padding: 3%;" id="myChart" height="200" aria-level="chart" role="img" ></canvas>
    </div>


    

    <script>

const data = {
    labels: ["Expense", "Investment", "Savings"],
    datasets: [{
        label: 'Income',
        backgroundColor: ['hotpink', "red", "black"],
        borderColor: 'rgb(255, 99, 132)',
        data: [<%= expense %>, <%= investment %>, <%= savings %>],
    },
]
};

const config = {
    type: 'line',
    data: data,
    options: {
        responsive:true,
        layout: {
            padding :{
                left : 50,
                right : 50,
                top: 50,
                bottom: 50,
            },
        },
        tooltip: {
            enabled: true,
            backgroundColor : "black",
            titleFontSize : 30,
            bodyFontSize : 50
        },
        title: {
            display : true,
            fontSize : "500px"
        },
        animation : {
            duration : 750,
            easing : "easeInOutBounce",
        }
    }
};



const myChart = new Chart(
    document.getElementById('myChart'),
    config
);

    </script>
    
    
    
<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>



</html>