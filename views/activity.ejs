<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/expenses.css">

    <link rel="stylesheet" href="/css/activity.css">

    <!-- fontawesome -->
    <script src="https://use.fontawesome.com/abb3573696.js"></script>



    <title>Timeline</title>
</head>

<body>

    <%- include ("partials/navbar") %>


<header>
    <div>
        <h1 style="color: aliceblue; font-weight: 400%; font-size: 80%;">Your recent activities</h1>
    </div>
</header>



<section style="margin: 10%; margin-top: 2%;">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="main-timeline">
                    <% posts.forEach(function(post){ %>
                    <div class="timeline">
                        <div class="timeline-content">
                            <div class="timeline-icon"><i class="fa fa-globe"></i></div>
                            <h3 class="title"> <%= post.date %>   : <img width="20px" src="https://cdn3.iconfinder.com/data/icons/font-awesome-solid/512/indian-rupee-sign-4096.png"> <%= post.normal + post.investment + post.savings %> </h3>
                            <p class="description" style="font-family: 'Times New Roman', Times, serif; font-size:medium;">
                                <%= (post.content).substring(0,200)+" ..." %>
                                <a href="/posts/<%=post._id%>">Read More</a>
                            </p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</section>


    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>


</body>

</html>